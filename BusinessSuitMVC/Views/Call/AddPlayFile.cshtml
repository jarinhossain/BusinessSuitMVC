
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            User
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create</h3>
                    </div>
                    @using (Html.BeginForm("AddPlayFile", "Call", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="box-body">


                            <div class="form-group">
                                <label class="control-label col-md-3">Profile Image<span style="color:red;">*</span> </label>
                                <input type="File" id="image" name="image" />
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">File Name<span style="color:red;">*</span> </label>
                                <div>
                                    @Html.TextBox("FileName", null, new { @class = "form-Control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <input type="submit" value="Save" style="margin-left:15px" class="btn btn-info" />

                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</section>
