@model IEnumerable<BusinessSuitMVC.Models.Obd_Request>

@{
    ViewBag.Title = "Request List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>


                    <div class="box-body">
                        Contact Name: <label>@ViewData["contactName"]</label> <br />
                        Ward: <label>@ViewData["ward"]</label>
                        @if (Model != null)
                        {
                            <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Mobile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Context)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Last_App)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Disposition)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Bill_Sec)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Duration)
                                        </th>
                                        <th>
                                            Retried
                                        </th>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Remarks)
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (bool.Parse(Session["Is_Client"].ToString()) != true)
                                                {
                                                    @item.Mobile
                                                }
                                                else
                                                {
                                                    @(item.Mobile.Substring(0, 5) + "XXX" + item.Mobile.Substring(8))
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Context)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Last_App)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Disposition)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Bill_Sec)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Duration)
                                            </td>
                                            <td>
                                                @(item.Retry_Count == 1 ? "Yes" : "")
                                            </td>
                                            <td>
                                                @(item.Created_On.Value.ToShortDateString())
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remarks)
                                            </td>
                                            <td>

                                                @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                                        </tr>

                                    }
                                </tbody>
</table>
                        }
                        
                        else
                        {
                            <label class="text-danger">No Data Found</label>
                        }

                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
@section contents{
    <link rel="stylesheet" href="~/layouts/adminTemplate/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    @*<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />*@
    @*<link href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.dataTables.min.css" rel="stylesheet" />*@
}
