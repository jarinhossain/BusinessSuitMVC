@model IEnumerable<BusinessSuitMVC.Models.Incoming_Calls>

@{
    ViewBag.Title = "IncomingCalls";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Incoming Calls
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>


                    <div class="box-body">
                        @if (Model != null)
                        {
                            <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">
                                <thead>
                                    <tr>
                                        <th>Options</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Mobile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Server)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Call_Unique_Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Context)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Answer_Time)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Disposition)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Bill_Sec)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Duration)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Created_On)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink("View", "Edit", new { id = item.Id })
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mobile)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Server)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Call_Unique_Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Context)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Answer_Time)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Disposition)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Bill_Sec)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Duration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created_On)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <label class="text-danger">No Data Found</label>
                        }

                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
