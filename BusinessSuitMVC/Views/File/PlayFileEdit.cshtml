@model BusinessSuitMVC.Models.Play_File_TB
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Play File
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit</h3>
                    </div>
                    @using (Html.BeginForm("PlayFileEdit", "File", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="box-body">
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group">

                                <label class="control-label col-md-3">File Name<span style="color:red;">*</span> </label>

                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.File_Name, new { @Class = "form-control" })
                                </div>
                            </div>
                            @*<div class="form-group">

                                    <label class="control-label col-md-3">Is_Testing<span style="color:red;">*</span> </label>

                                    <div class="col-md-5">
                                        @Html.CheckBoxFor(model => model.Is_Testin, new { @checked = "checked" });
                                    </div>
                                </div>*@
                            <div class="form-group">

                                <label class="control-label col-md-3">Remarks<span style="color:red;">*</span> </label>

                                <div class="col-md-5">
                                    @Html.TextAreaFor(m => m.Remarks, new { @Class = "form-control", @row = "3" })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-3"></div>

                                <input type="submit" value="Update" style="margin-left:15px" class="btn btn-info" />
                                <input type="button" value="Reset" id="reset" class="btn btn-info" />

                            </div>

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
@section contents{
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Script/bootstrap-datepicker.min.js"></script>
    <script>
        $('.myDatePicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        })

        $("form").submit(function (event) {
            if ($("#File_Name").val() == "") {
                event.preventDefault();
                //alert("Counsilor_Name is required");
                swal("Failed", "File Name is required", "error").then(function () {
                    $("#File_Name").focus();
                });


            }
            else if ($("#Remarks").val() == "") {
                event.preventDefault();
                //alert("Counsilor_Name is required");
                swal("Failed", "Remarks is required", "error").then(function () {
                    $("#Remarks").focus();
                });


            }

        });

        function resetFunction() {

            $("#Name").val("");
            $("#Remarks").val("");
        }

        $(document).ready(function () {

            var message = $("#msg").text();

            if (message == "Successfully Updated") {
                swal("Successful", "Successfully Updated", "success").then(function () {
                    resetFunction();
                    window.location = "/File/PlayFileSearch";
                });
            }

            $("#reset").click(function () {

                resetFunction();

            });

        });
    </script>
}