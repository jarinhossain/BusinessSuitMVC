@model BusinessSuitMVC.Models.Permission

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Permission Details
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-10">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h1 class="box-title">Details</h1>
                    </div>

                    <div class="box-body">
                        <div class="table-responsive panel col-md-8">
                            <table class="table">
                                <tbody>

                                    <tr>
                                        <td class="text-primary text-right" width="30%"> Name: </td>
                                        <td style="font-weight:bold">@Model.Name</td>
                                    </tr>

                                    <tr>
                                        <td class="text-primary text-right">Display_Name: </td>
                                        <td style="font-weight:bold">@Model.Display_Name</td>
                                    </tr>

                                    <tr>
                                        <td class="text-primary text-right"> Description: </td>
                                        <td style="font-weight:bold">@Model.Description</td>
                                    </tr>
                                    <tr>
                                        <td class="text-primary text-right" width="30%"> Module: </td>
                                        <td style="font-weight:bold">@Model.Module.Name</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-group" style="text-align:center">

                                <a href="~/Login/PermissionEdit?id=@Model.Id" class="btn btn-success">Edit</a>
                                <a href="~/Login/PermissionSearch" class="btn btn-info">Back</a>

                            </div>
                        </div>

                      

                    </div>

                </div>
            </div>

        </div>
    </section>

</section>