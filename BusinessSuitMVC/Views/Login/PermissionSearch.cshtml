@model List<BusinessSuitMVC.Models.Permission>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            User
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>
                    <div class="container">

                        <div class="box-body">
                            <table class="table table-responsive display" id="example">

                                <thead>
                                    <tr>
                                        <th>Option</th>
                                        <th>Name</th>
                                        <th>Display Name</th>
                                        <th>Description</th>
                                        <th>Module</th>
                                    </tr>
                                <thead>
                                <tbody>
                                    @foreach (BusinessSuitMVC.Models.Permission permissionlist in (IEnumerable<BusinessSuitMVC.Models.Permission>)Model)
                                    {
                                        <tr>
                                            <td><a href="~/Login/PermissionEdit?id=@permissionlist.Id">Edit | </a><a href="~/Login/PermissionDetails?id=@permissionlist.Id">Details</a></td>
                                            <td>@permissionlist.Name</td>
                                            <td>@permissionlist.Display_Name</td>
                                            <td>@permissionlist.Description</td>
                                            <td>@permissionlist.Module</td>
                                        </tr>
                                    }
                                <tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
@section contents{
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
}
@section scripts{

    <script src="~/Script/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}