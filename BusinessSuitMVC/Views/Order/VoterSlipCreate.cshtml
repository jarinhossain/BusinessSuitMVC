@model BusinessSuitMVC.Models.Offline_Order_Detalis
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
@{
    List<SelectListItem> delivery = new List<SelectListItem>();
    delivery.Add(new SelectListItem() { Value = "1", Text = "Softcopy" });
    delivery.Add(new SelectListItem() { Value = "2", Text = "Hardcopy" });
}
<section class="content-wrapper">

    <section class="content-header">
        <h1>
          Voter Slip
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create</h3>
                    </div>
                    @using (Html.BeginForm("VoterSlipCreate", "Order", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal"}))
                    {
                        <div class="box-body">

                            <div class="form-group">
                                <label class="control-label col-md-3">Slip Format<span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Slip_Format_Id, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Estimated Voters<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Estimated_Voters, new { @Class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Passport Size Photo</label>
                                <div class="col-md-5">
                                    <input type="file" id="image" name="image" />
                                </div>
                            </div>
                            @*<div class="form-group">
                                <label class="control-label col-md-3">Sample Voter Slip</label>
                                <div class="col-md-5">
                                    <input type="file" id="image1" name="image1" />
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="control-label col-md-3">Cd Provided</label>
                                <div class="col-md-5">
                                    @Html.CheckBox("Is_Cd_Provided") Yes
                                </div>
                            </div>
                           
                            @*<div class="form-group">
                                <label class="control-label col-md-3">Voter List File<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Price_Per_Piece, new { @Class = "form-control calculateCost", @type = "number" })
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="control-label col-md-3">Center Name List</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Center_Name_List, new { @Class = "form-control"})
                                </div>
                            </div>
                            @*<div class="form-group">
                                <label class="control-label col-md-3">Center List Image<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Center_Name_List, new { @Class = "form-control", @type = "number" })
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="control-label col-md-3">Blank Slip</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Paid_Blank_Slip, new { @Class = "form-control",@type = "number"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Blank Slip Price</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Blank_Slip_Price, new { @Class = "form-control",@type = "number"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Marka</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Marka, new { @Class = "form-control"})
                                </div>
                            </div>
                            @*<div class="form-group">
                                <label class="control-label col-md-3">Marka Image<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Marka, new { @Class = "form-control", @type = "number" })
                                </div>
                            </div>*@
                           
                            <div class="form-group">
                                @*@Html.Label("Client_Type", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3">Delivery Type</label>
                                <div class="col-md-5">
                                    @Html.DropDownList("Delivery_Type", @delivery, "Select Position", new { @class = "form-control editor-field"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Price Per Piece<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Price_Per_Piece, new { @Class = "form-control", @type = "number"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>

                                <input type="submit" value="Save" style="margin-left:15px" class="btn btn-info" />
                                <input type="button" value="Reset" id="reset" class="btn btn-info" />

                            </div>

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>

    <script>
       

    $("form").submit(function (event) {
        if ($("#Slip_Format_Id").val() == "") {
            event.preventDefault();
            //alert("Counsilor_Name is required");
            swal("Failed", "Slip Format  is required", "error").then(function () {
                $("#Slip_Format_Id").focus();
            });

        }
        else if ($("#Estimated_Voters").val() == "") {
            event.preventDefault();
            swal("Failed", "Estimated Voters is required", "error").then(function () {
                $("#Estimated_Voters").focus();
            });
        }
        else if ($("#Delivery_Type").val() == "") {
            event.preventDefault();
            swal("Failed", "Delivery Type is required", "error").then(function () {
                $("#Delivery_Type").focus();
            });
        }
        else if ($("#Price_Per_Piece").val() == "") {
            event.preventDefault();
            swal("Failed", "Price Per Piece is required", "error").then(function () {
                $("#Price_Per_Piece").focus();
            });
        }
       
    });
    function resetFunction()
    {
        $("#Slip_Format_Id").val("");
        $("#Estimated_Voters").val("");
        $("#Passport_Image").val("");
       // $("#Sample_Slip_Image").val("");
        $("#Is_Cd_Provided").val("");
       // $("#Voter_List_File").val("");
        $("#Center_Name_List").val("");
       // $("#Center_Name_List_Image").val("");
        $("#Paid_Blank_Slip").val("");
        $("#Blank_Slip_Price").val("");
        $("#Marka").val("");
       // $("#Marka_Image").val("");
        $("#Delivery_Type").val("");
        $("#Price_Per_Piece").val("");

    }
    $(document).ready(function () {
        var message = $("#msg").text();

        if (message == "Successfully Saved") {
            swal("Successful", "Successfully Saved", "success");
            resetFunction();
        }

        $("#reset").click(function () {

            resetFunction();

        });

    });
    </script>
