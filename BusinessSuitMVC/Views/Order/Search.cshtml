@model IEnumerable<BusinessSuitMVC.Models.Online_Order_Details>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Order
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>


                    <div class="box-body">
                        <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">
                            <thead>
                                <tr>
                                    <th>Options</th>
                                    <th>Client Name</th>
                                    <th>Area</th>
                                    <th>Ward</th>
                                    <th>Product</th>
                                    <th>Campaign Date</th>
                                    <th>Calls</th>
                                    <th>Price</th>
                                    <th>Total Cost</th>
                                    <th>Status</th>
                                </tr>
                            <thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Order.Order_Status == 0)
                                            {
                                            <a href="~/Call/ProceedOBDBulk/@item.Order_Id">Proceed</a>
                                            }
                                            else if (item.Obd_Bulk.FirstOrDefault().Is_Active == true)
                                            {
                                            <a href="~/Call/toggleOBDStatus/@item.Id">Deactivate</a>
                                            }
                                            else if (item.Obd_Bulk.FirstOrDefault().Is_Active == false)
                                            {
                                            <a href="~/Call/toggleOBDStatus/@item.Id">Activate</a>
                                            }
                                            @*@Html.ActionLink("Delete", "SouceNumberDelete", new { id = item.Id })*@
                                        </td>
                                        <td>
                                            @item.Order.Client_List.Counsilor_Name
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Advertisement_Area)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ward)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Display_Name)
                                        </td>
                                        <td>
                                            @item.Promotion_Date_From.Value.ToShortDateString()
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estimated_Reach_Ordered)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price_Per_Piece)
                                        </td>
                                        <td>
                                            @(item.Estimated_Reach_Ordered * item.Price_Per_Piece)
                                        </td>
                                        <td>
                                            @(item.Order.Order_Status == 0 ? "Not Proceeded" : "Proceeded")
                                        </td>
                                    </tr>
                                }
                            <tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
