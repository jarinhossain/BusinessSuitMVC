@model BusinessSuitMVC.Models.Online_Order_Detalis
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
@{

}
<section class="content-wrapper">

    <section class="content-header">
        <h1>
            SMS Marketing 
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create</h3>
                    </div>
                    @using (Html.BeginForm("SmsMarketingCreate", "Order", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal"}))
                    {
                        <div class="box-body">

                            <div class="form-group">
                                <label class="control-label col-md-3">Advertisement Area<span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Advertisement_Area, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ward<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Ward, new { @Class = "form-control", @type = "number"})
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Number Of SMS<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Estimated_Reach_Ordered, new { @Class = "form-control calculateCost", @type = "number"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Promotion Date<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Promotion_Date_From,new { @Class = "form-control myDatePicker" })
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="control-label col-md-3">SMS Content<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextAreaFor(m => m.Sms_Content, new { @Class = "form-control",@rows="3" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Numbers Provided</label>
                                <div class="col-md-5">
                                  @Html.CheckBox("Number_Db_Provided") Yes
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Price Per SMS<span style="color:red;">*</span></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Price_Per_Piece, new { @Class = "form-control calculateCost", @type = "number"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Total Cost</label>
                                <div class="col-md-5">
                                    @Html.TextBox("Total_Cost", null, new { @Class = "form-control",@disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Remark</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Remarks, new { @Class = "form-control" })
                                </div>
                            </div>
                         
                            <div class="form-group">
                                <div class="col-md-3"></div>

                                <input type="submit" value="Save" style="margin-left:15px" class="btn btn-info" />
                                <input type="button" value="Reset" id="reset" class="btn btn-info" />

                            </div>

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
@section contents{
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Script/bootstrap-datepicker.min.js"></script>
    <script>
        $('.myDatePicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        })

        $(".calculateCost").on('keyup', function () {
            var numberOfSMS = $("#Estimated_Reach_Ordered").val();
            var price = $("#Price_Per_Piece").val();

            var value = parseInt(numberOfSMS) * parseFloat(price);
            
            $('#Total_Cost').val(value);

        })

    $("form").submit(function (event) {
        if ($("#Advertisement_Area").val() == "") {
            event.preventDefault();
            //alert("Counsilor_Name is required");
            swal("Failed", "Advertisement Area  is required", "error").then(function () {
                $("#Advertisement_Area").focus();
            });

        }
        else if ($("#Ward").val() == "") {
            event.preventDefault();
            swal("Failed", "Ward is required", "error").then(function () {
                $("#Ward").focus();
            });
        }
        else if ($("#Estimated_Reach_Ordered").val() == "") {
            event.preventDefault();
            swal("Failed", "Number Of SMS is required", "error").then(function () {
                $("#Estimated_Reach_Ordered").focus();
            });
        }
        else if ($("#Promotion_Date_From").val() == "") {
            event.preventDefault();
            swal("Failed", "Promotion Date From is required", "error").then(function () {
                $("#Promotion_Date_From").focus();
            });
        }
        else if ($("#Sms_Content").val() == "") {
            event.preventDefault();
            swal("Failed", "Sms Content Type is required", "error").then(function () {
                $("#Sms_Content").focus();
            });
        }
        else if ($("#Price_Per_Piece").val() == "") {
            event.preventDefault();
            swal("Failed", "Price Per SMS From is required", "error").then(function () {
                $("#Price_Per_Piece").focus();
            });
        }
       
    });
    function resetFunction()
    {
        $("#Advertisement_Area").val("");
        $("#Ward").val("");
        $("#Estimated_Reach_Ordered").val("");
        $("#Promotion_Date_From").val("");
        $("#Sms_Content").val("");
        $("#Price_Per_Piece").val("");
        $("#Remarks").val("");
    }
    $(document).ready(function () {
        var message = $("#msg").text();

        if (message == "Successfully Saved") {
            swal("Successful", "Successfully Saved", "success");
            resetFunction();
        }

        $("#reset").click(function () {

            resetFunction();

        });

    });
    </script>
}