<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Source Number Create</h3>
                    </div>
                    @using (Html.BeginForm("SourceNumberCreate", "Source", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @id = "userCreate", @name = "userCreate" }))
                    {
                        <div class="box-body">
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group">
                                <label class="control-label col-md-3">Source Name</label>
                                <div class="col-md-5">
                                    @Html.DisplayFor(m => m.Contact_Name, new { @Class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ward</label>
                                <div class="col-md-5">
                                    @Html.DisplayFor(m => m.Ward, new { @Class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Company Name</label>
                                <div class="col-md-5">
                                    @Html.DisplayFor(m => m.Company_Name, new { @Class = "form-control", })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Source Type</label>
                                <div class="col-md-5">
                                    @Html.DropDownList("Source_Type_Id", (List<SelectListItem>)ViewData["SourceList"], "Select Source Type", new { @class = "form-control editor-field", @readonly = "true", @disabled="disabled" })
                                </div>
                            </div>
                            <div class="form-group">
                                    <label class="control-label col-md-3">Mobile<span style="color:red;">*</span></label>
                                    <div class="col-md-5">
                                        @Html.TextBox("MobileNumber",null, new { @Class = "form-control" })
                                    </div>
                                </div>



                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <input type="submit" value="Save" style="margin-left:15px" class="btn btn-success" />
                                <a class="btn btn-info" href="~/Source/SourceNumberSearch?id=@Model.Id"> Numbers List </a>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
<script>


    $("form").submit(function (event) {
        //stop form submit
        $("#msg").text('');//clear msg
        $("input[type=submit]").attr("disabled", "disabled");
        
        if ($("#MobileNumber").val() == "") {
            event.preventDefault();
            swal("Failed", "Mobile Number is required", "error").then(function () {
                $("#MobileNumber").focus();
                $("#msg").text('Mobile Number is required');
                $("input[type=submit]").removeAttr("disabled");
            });
        }
       else if ($("#MobileNumber").val().length != 11) {
            event.preventDefault();
            swal("Failed", "Mobile Number should be 11 digit", "error").then(function () {
                $("#MobileNumber").focus();
                $("#msg").text('Mobile Number should be 11 digit');
                $("input[type=submit]").removeAttr("disabled");
            });
       }
       else {
           event.preventDefault();
           $.ajax({
               url: '/Source/SourceNumberCreate',
               type: "POST",
               data: { SourceId: $('#Id').val(), MobileNumber: $('#MobileNumber').val() },
               success: function (result) {
                   if (result != 'true') {
                       swal({
                           title: "Failed",
                           text: result,
                           icon: "error",
                           button: false,
                           timer: 500
                       }).then(function () {
                           $("#MobileNumber").focus();
                           $("#msg").text(result);
                           $("input[type=submit]").removeAttr("disabled");
                       });
                   }
                   else {
                       swal({
                           title: "Successful",
                           text: "Successfully Added",
                           icon: "success",
                           button: false,
                           timer: 500
                       }).then(function () {
                           $("#MobileNumber").focus();
                           $("#msg").text("Successfully Added");
                           $("#MobileNumber").val('');
                           $("input[type=submit]").removeAttr("disabled");
                       });
                   }
               },
               error: function (result) {
                   swal('failed', result, 'error');
               }
           });
       }


    });
    function resetFunction() {
        $("#MobileNumber").val("");
       
    }
    $(document).ready(function () {
        

        

    });
</script>
            
