@model List<BusinessSuitMVC.Models.Source>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>
                    <div class="container">

                        <div class="box-body">

                            <h1 style="margin-left:450px;margin-bottom:20px">Source List</h1>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Option</th>
                                        <th>Contact Name</th>
                                        <th>Company Name</th>
                                        <th>Source Type</th>
                                        <th>Mobile1</th>
                                        <th>Mobile2</th>
                                        <th>Division</th>
                                        <th>District</th>
                                        <th>Ward</th>
                                        <th>Address</th>
                                    </tr>
                                <thead>
                                <tbody>
                                    @foreach (BusinessSuitMVC.Models.Source source in (IEnumerable<BusinessSuitMVC.Models.Source>)Model)
            {
                                        <tr>
                                            <td><a href="~/Source/Edit?id=@source.Id">Edit | </a><a href="~/Source/Details?id=@source.Id">Details</a></td>
                                            <td>@source.Contact_Name</td>
                                            <td>@source.Company_Name</td>
                                            <td>@source.Source_Type</td>
                                            <td>@source.Mobile1</td>
                                            <td>@source.Mobile2 </td>
                                            <td>@source.Division_Id</td>
                                            <td>@source.District_Id</td>
                                            <td>@source.Ward</td>
                                            <td>@source.Address</td>
                                        </tr>
                                    }
                                <tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>