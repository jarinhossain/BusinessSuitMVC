@model List<BusinessSuitMVC.Models.Source>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>


                    <div class="box-body">
                        <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">

                            <thead>
                                <tr>
                                    <th>Option</th>
                                    <th>Contact Name</th>
                                    <th>Company Name</th>
                                    <th>Source Type</th>
                                    <th>Mobile1</th>
                                    <th>Mobile2</th>
                                    <th>Ward</th>
                                    <th>Division</th>
                                    <th>District</th>
                                    <th>Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (BusinessSuitMVC.Models.Source source in (IEnumerable<BusinessSuitMVC.Models.Source>)Model)
            {
                                    <tr>
                                        <td>
                                            @*<a class="btn btn-danger btn-xs" href="~/Source/Edit?id=@source.Id">Edit</a>
                                            <a class="btn btn-info btn-xs" href="~/Source/Details?id=@source.Id">Details</a>*@
                                            <a class="btn btn-success btn-xs" href="~/Source/SourceNumberCreate?id=@source.Id">Add Number</a>
                                            <a class="btn btn-primary btn-xs" href="~/Source/SourceNumberSearch?id=@source.Id">Numbers</a>
                                        </td>
                                        <td>@source.Contact_Name</td>
                                        <td>@source.Company_Name</td>
                                        <td>@source.Source_Type.Name</td>
                                        <td>@source.Mobile1</td>
                                        <td>@source.Mobile2 </td>
                                        <td>@source.Ward</td>
                                        <td>@source.Division_Id</td>
                                        <td>@source.District_Id</td>
                                        <td>@source.Address</td>
                                    </tr>
                                }
                            <tbody>
                        </table>
                        
                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
