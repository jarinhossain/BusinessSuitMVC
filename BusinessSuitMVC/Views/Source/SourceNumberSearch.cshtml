                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="col-md-11">
                            <h3 class="box-title">Search</h3>
                        </div>
                       
                    </div>


                    <div class="box-body">
                        Contact Name: <label>@ViewData["contactName"]</label> <br />
                        Ward: <label>@ViewData["ward"]</label>
                        <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">
                            <thead>
                                <tr>
                                    <th>Options</th>
                                    <th>Number</th>
                                    <th>Operator</th>
                                    <th>Created_Date</th>
                                </tr>
                            <thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Edit", "SouceNumberEdit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "SouceNumberDelete", new { id = item.Id })
                                        </td>
                                        <td>
                                            @("0" + item.Number1.ToString())
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Operator.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created_On)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
