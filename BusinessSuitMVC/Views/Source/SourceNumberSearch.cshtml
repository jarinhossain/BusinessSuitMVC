@model IEnumerable<BusinessSuitMVC.Models.Number>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
