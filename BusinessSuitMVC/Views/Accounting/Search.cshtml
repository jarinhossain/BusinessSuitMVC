@model List<BusinessSuitMVC.Models.Expense>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Expense
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>
                    <div class="container">

                        <div class="box-body">

                            <h1 style="margin-left:450px;margin-bottom:20px">Expense List</h1>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Option</th>
                                        <th>Type</th>
                                        <th>Spent_Date</th>
                                        <th>Amount</th>
                                        <th>Description</th>
                                        
                                    </tr>
                                <thead>
                                <tbody>
                                    @foreach (BusinessSuitMVC.Models.Expense expense in (IEnumerable<BusinessSuitMVC.Models.Expense>)Model)
            {
                                        <tr>
                                            <td><a href="~/Accounting/Edit?id=@expense.Id">Edit</a></td>
                                            <td>@expense.Type</td>
                                            <td>@expense.Spent_Date</td>
                                            <td>@expense.Amount</td>
                                            <td>@expense.Description</td>
                                        </tr>

                                    }
                                <tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
