@model BusinessSuitMVC.Models.Expense
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
@{
    List<SelectListItem> type = new List<SelectListItem>();
    type.Add(new SelectListItem() { Value = "1", Text = "Transport" });
    type.Add(new SelectListItem() { Value = "2", Text = "Liflet" });
    type.Add(new SelectListItem() { Value = "3", Text = "Visiting Card" });
    type.Add(new SelectListItem() { Value = "1", Text = "Food" });
    type.Add(new SelectListItem() { Value = "2", Text = "Bulk SMS" });
    type.Add(new SelectListItem() { Value = "3", Text = "IP TSP" });
}
<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Accounting
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit</h3>
                    </div>
                    @using (Html.BeginForm("Edit", "Accounting", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="box-body">

                            @Html.HiddenFor(m => m.Id)


                            <div class="form-group">
                                @*@Html.Label("District", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-1">Type<span style="color:red;">*</span> </label>
                                <div class="col-md-2">
                                    @Html.DropDownList("Type", @type, "Select type", new { @class = "form-control editor-field" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.Label("Date", new { @class = "control-label col-md-1" })
                                <div class="col-md-2">
                                    @Html.TextBoxFor(m => m.Spent_Date, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">

                                @Html.Label("Description", new { @class = "control-label col-md-1" })
                                <div class="col-md-2">
                                    @Html.TextBoxFor(m => m.Description, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-1"></div>

                                <input type="submit" value="Update" style="margin-left:15px" class="btn btn-info" />


                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
<script>
    $("form").submit(function (event) {
        if ($("#Type").val() == "") {
            event.preventDefault();
            //alert("Counsilor_Name is required");
            swal("Failed", "Type is required", "error").then(function () {
                $("#Type").focus();
            });

        }
        //else if ($("#Spent_Date").val() == "") {
        //    event.preventDefault();
        //    swal("Failed", "Date is required", "error").then(function () {
        //        $("#Spent_Date").focus();
        //    });
        //}
        //else if ($("#Description").val() == "") {
        //    event.preventDefault();
        //    swal("Failed", "Description is required", "error").then(function () {
        //        $("#Description").focus();
        //    });
        //}


    });
    $(document).ready(function () {
        $("#reset").click(function () {

            $('#Type option:first').prop('selected', true); //clear
            $("#Spent_Date").val("");
            $("#Description").val("");

        });

    });
</script>
