@model BusinessSuitMVC.Models.ServerTB
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Server
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create</h3>
                    </div>
                    @using (Html.BeginForm("ServerCreate", "Server", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="box-body">

                            <div class="form-group">

                                <label class="control-label col-md-3">Name<span style="color:red;">*</span> </label>

                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Name, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-md-3">Local Ip<span style="color:red;">*</span> </label>

                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Local_IP, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-md-3">Real Ip<span style="color:red;">*</span> </label>

                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Real_IP, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-md-3">Description</label>

                                <div class="col-md-5">
                                    @Html.TextAreaFor(m => m.Description, new { @Class = "form-control", @rows = "3" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>

                                <input type="submit" value="Save" style="margin-left:15px" class="btn btn-info" />
                                <input type="button" value="Reset" id="reset" class="btn btn-info" />

                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
@section contents{
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Script/bootstrap-datepicker.min.js"></script>
    <script>
        $('.myDatePicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        })

        $("form").submit(function (event) {
            if ($("#Name").val() == "") {
                event.preventDefault();
                //alert("Counsilor_Name is required");
                swal("Failed", "Name is required", "error").then(function () {
                    $("#Name").focus();
                });


            }
            else if ($("#Local_IP").val() == "") {
                event.preventDefault();
                //alert("Counsilor_Name is required");
                swal("Failed", "Local IP is required", "error").then(function () {
                    $("#Local_IP").focus();
                });


           }
            else if ($("#Real_IP").val() == "") {
                event.preventDefault();
                //alert("Counsilor_Name is required");
                swal("Failed", "Real IP is required", "error").then(function () {
                    $("#Real_IP").focus();
                });


            }

        });

        function resetFunction() {

            $("#Name").val("");
            $("#Local_IP").val("");
            $("#Real_IP").val("");
        }

        $(document).ready(function () {

            var message = $("#msg").text();

            if (message == "Successfully Saved") {
                swal("Successful", "Successfully Saved", "success").then(function () {
                    resetFunction();
                    window.location = "/Server/ServerSearch";
                });
            }

            $("#reset").click(function () {

                resetFunction();

            });

        });
    </script>
}