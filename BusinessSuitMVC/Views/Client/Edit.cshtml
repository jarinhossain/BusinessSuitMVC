@model BusinessSuitMVC.Models.Client_List
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
@{
    List<SelectListItem> District = new List<SelectListItem>();
    District.Add(new SelectListItem() { Value = "1", Text = "Gazipur" });
    District.Add(new SelectListItem() { Value = "2", Text = "Khulna" });

    List<SelectListItem> Clienttype = new List<SelectListItem>();
    Clienttype.Add(new SelectListItem() { Value = "1", Text = "Councillor" });
    Clienttype.Add(new SelectListItem() { Value = "2", Text = "General Councillor" });
    Clienttype.Add(new SelectListItem() { Value = "3", Text = "Mayor" });

    List<SelectListItem> position = new List<SelectListItem>();
    position.Add(new SelectListItem() { Value = "1", Text = "Current" });
    position.Add(new SelectListItem() { Value = "2", Text = "Ex-Elected" });
    position.Add(new SelectListItem() { Value = "3", Text = "New" });

    //List<SelectListItem> Elected = new List<SelectListItem>();
    //Elected.Add(new SelectListItem() { Value = "1", Text = "Yes" });
    //Elected.Add(new SelectListItem() { Value = "0", Text = "No" });
}
<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Client
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit</h3>
                    </div>
                    @using (Html.BeginForm("Edit", "Client", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal", @id = "EditCreate", @name = "EditCreate" }))
                    {
                        <div class="box-body">
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group">
                                <label class="control-label col-md-3">Counsillor Name <span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Counsilor_Name, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Bangla Name", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Bangla_Name, new { @Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.Label("Mobile1", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3">Mobile1<span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Mobile1, new { @Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.Label("Mobile2", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Mobile2, new { @Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.Label("Email", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Email, new { @Class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.Label("Ward", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3" >Ward<span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.ward, new { @Class = "form-control",@type="number" })
                                </div>
                            </div>


                            <div class="form-group">
                                @*@Html.Label("District", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3">District<span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.DropDownList("District", @District, "Select District", new { @class = "form-control editor-field" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.Label("Address", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Address, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">

                                @Html.Label("Remarks", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextAreaFor(m => m.Remarks, new { @Class = "form-control", @rows="3" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                @Html.Label("Is_Elected", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.DropDownList("Is_Elected", @Elected, "Select Is Elected", new { @class = "form-control editor-field" })
                                </div>
                            </div>*@
                            <div class="form-group">
                                @*@Html.Label("Client_Type", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3">Client Type <span style="color:red;">*</span> </label>
                                <div class="col-md-5">
                                    @Html.DropDownList("Client_Type", @Clienttype, "Select Client Type", new { @class = "form-control editor-field" })
                                </div>
                            </div>
                            <div class="form-group">
                                @*@Html.Label("Client_Type", new { @class = "control-label col-md-1" })*@
                                <label class="control-label col-md-3">Present Position</label>
                                <div class="col-md-5">
                                    @Html.DropDownList("Present_Position", @position, "Select Position", new { @class = "form-control editor-field" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Profile Image</label>
                                <div class="col-md-5">
                                    <input type="file" id="image" name="image" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-4">
                                    <img height="150px" alt="No Image" src="~/Images/Client/C_@(Model.Id + ".jpg")" />
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <div class="col-md-3"></div>

                                <input type="submit" value="Update" style="margin-left:15px" class="btn btn-info" />
                                <a href="~/Client/Search" class="btn btn-primary">Back</a>
                            </div>
                           

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg" style="color:red;">@ViewData["msg"]</label>
                            </div>
                        </div>




                    }
                </div>
            </div>
        </div>
    </section>
</section>
<script>
    $("form").submit(function (event) {
        if ($("#Counsilor_Name").val() == "") {
            event.preventDefault();
            //alert("Counsilor_Name is required");
            swal("Failed", "Counsillor Name is required", "error").then(function () {
                $("#Counsilor_Name").focus();
            });

        }
        else if ($("#Mobile1").val() == "" || $("#Mobile1").val().length != 11) {
            event.preventDefault();
            swal("Failed", "Mobile1 should be 11 digit", "error").then(function () {
                $("#Mobile1").focus();
            });
        }
        else if ($("#ward").val() == "") {
            event.preventDefault();
            swal("Failed", "Ward is required", "error").then(function () {
                $("#ward").focus();
            });
        }
        else if ($("#District").val() == "") {
            event.preventDefault();
            swal("Failed", "District is required", "error").then(function () {
                $("#District").focus();
            });
        }
        else if ($("#Client_Type").val() == "") {
            event.preventDefault();
            swal("Failed", "Client Type is required", "error").then(function () {
                $("#Client_Type").focus();
            });
        }

    });
    function resetFunction()
    {
        $("#Counsilor_Name").val("");
        $('#District option:first').prop('selected', true); //clear
        $("#Bangla_Name").val("");
        $("#Mobile1").val("");
        $("#Mobile2").val("");
        $("#Email").val("");
        $("#ward").val("");
        $("#District").val("");
        $("#Address").val("");
        $("#Remarks").val("");
        //  $("#Is_Elected").val("");
        $("#Client_Type").val("");
        $("#Present_Position").val("");
    }
    $(document).ready(function () {
        var message = $("#msg").text();

        if (message == "Successfully Update") {
            swal("Successful", "Successfully Updated", "success");
            resetFunction();
        }

        $("#reset").click(function () {

            resetFunction();

        });

    });
</script>
