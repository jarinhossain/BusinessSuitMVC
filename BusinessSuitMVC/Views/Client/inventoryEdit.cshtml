@model BusinessSuitMVC.Models.Client_Inventory
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; ;
}

<!DOCTYPE html>
@{

}
<section class="content-wrapper">

    <section class="content-header">
        <h1>
            Source
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create</h3>
                    </div>
                    @using (Html.BeginForm("inventoryEdit", "Client", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="box-body">
                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group">
                                @Html.Label("Free Sms", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Free_Sms, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Free Call", new { @class = "control-label col-md-3" })
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Free_Call, new { @Class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <input type="submit" value="Save" class="btn btn-info" />
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label id="msg">@ViewData["msg"]</label>

                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</section>
<script>
    $(document).ready(function ()
    {
        $("#form").submit(function (event)
        {
            event.preventDefault();
            var formdata = {
                Free_Sms: $("#Free_Sms").val(),
                Free_Call: $("#Free_Call").val(),
            };
            $.ajax({
                url: "/Client/inventoryEdit",
                type:"POST",
                data: formdata,
                success: function (data) {
                    if (data == "true") {
                        swal("Success", "Succefully Updated", "success");
                    }
                    else
                        swal("Failed", data, "error");
                    reset();
                },
                error: function (data) {
                    alert("Unknown" + data)
                },

            })
        })
        function reset() {
            $("#Free_Sms").val("");
            $("#Free_Call").val("");
        }
    })
</script>