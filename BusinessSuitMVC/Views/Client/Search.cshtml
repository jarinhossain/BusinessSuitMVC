@model List<BusinessSuitMVC.Models.Client_List>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<section class="content-wrapper">

    <section class="content-header">
        <h1>
            User Profile
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search</h3>
                    </div>
                    <div class="container">

                        <div class="box-body">

                            <h1 style="margin-left:450px;margin-bottom:20px">Client</h1>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Option</th>
                                        <th>Name</th>
                                        <th>Mobile1</th>
                                        <th>Mobile2</th>
                                        <th>Email</th>
                                        <th>Word</th>
                                        <th>District</th>
                                        <th>Address</th>
                                        <th>Remarks</th>
                                    </tr>
                                <thead>
                                <tbody>
                                    @foreach (BusinessSuitMVC.Models.Client_List client in (IEnumerable<BusinessSuitMVC.Models.Client_List>)Model)
            {
                                        <tr>
                                            <td><a href="~/Client/Edit?id=@client.Id">Edit |</a>   <a href="~/Client/Details?id=@client.Id">Details</a></td>
                                           
                                            <td>@client.Counsilor_Name</td>
                                            <td>@client.Mobile1</td>
                                            <td>@client.Mobile2</td>
                                            <td>@client.Email</td>
                                            <td>@client.ward</td>
                                            <td>@client.District</td>
                                            <td>@client.Address</td>
                                            <td>@client.Remarks</td>
                                        </tr>

                                    }
                                <tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
