    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="col-md-11">
                            <h3 class="box-title">Search</h3>
                        </div>
                        <div class="col-md-1">
                            <a href="~/Client/Create" class="btn btn-primary btn-sm">Add</a>
                        </div>
                    </div>
                    

                        <div class="box-body">
                            <table class="table table-bordered table-responsive table-striped display nowrap" id="example" style="display:block">
                                <thead>
                                    <tr>
                                        <th>Option</th>
                                        <th>Name</th>
                                        <th>Mobile1</th>
                                        <th>Mobile2</th>
                                        <th>Email</th>
                                        <th>Word</th>
                                        <th>District</th>
                                        <th>Address</th>
                                        <th>Remarks</th>
                                    </tr>
                                <thead>
                                <tbody>
                                    @foreach (BusinessSuitMVC.Models.Client_List client in (IEnumerable<BusinessSuitMVC.Models.Client_List>)Model)
            {
                                        <tr>
                                            <td>
                                            <a href="~/Client/Edit?id=@client.Id">Edit </a>
                                             | <a href="~/Client/Details?id=@client.Id">Details</a>
                                             | <a href="~/Order/Index?id=@client.Id">Order</a>
                                             @if (int.Parse(Session["Role_Id"].ToString()) <= 2)
                                             {
                                                 <a href="~/Call/SingleCall?number=@client.Mobile1&remarks=@client.ward" id="singleCall"> | Call</a>
                                             }

                                            </td>
                                           
                                            <td>@client.Counsilor_Name</td>
                                            <td>@client.Mobile1</td>
                                            <td>@client.Mobile2</td>
                                            <td>@client.Email</td>
                                            <td>@client.ward</td>
                                            <td>@client.District.Name</td>
                                            <td>@client.Address</td>
                                            <td>@client.Remarks</td>
                                        </tr>

                                    }
                                <tbody>
                            </table>
                        </div>
                    
                </div>
            </div>
        </div>
    </section>
</section>
